{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "indent": "off",
    "max-len": "off",
    "semi": [
      2,
      "always"
    ],
    "no-unused-vars": "warn",
    "no-param-reassign": "warn",
    "no-plusplus": "warn",
    "no-unused-expressions": "warn"
  }
}